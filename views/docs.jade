extends layout

block styles
    link(rel="stylesheet" href="/stylesheets/docs.css")
block content
    .row.affix-row
      .col-sm-3.col-md-2.affix-sidebar
        .sidebar-nav
          .navbar.navbar-default(role='navigation' style='width:65%; padding: 1%')
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.sidebar-navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            .navbar-collapse.collapse.sidebar-navbar-collapse
              ul#sidenav01.nav.navbar-nav
               li.active
                  h3(style="color:white; text-align:center") #{__("sidenavbar.docs")}
                li
                  a.collapsed(href="##" data-toggle='collapse', data-target='#toggle1', data-parent='#sidenav01')
                    span.glyphicon.glyphicon-book
                    | #{__("sidenavbar.reference")}
                    span.caret.pull-right
                  #toggle1.collapse(style='height: 0px;')
                    ul.nav.nav-list
                      li
                        a(href='#api') API
                      li
                        a(href='#config') Configuration
                li
                  a.collapsed(href='##', data-toggle='collapse', data-target='#toggle2', data-parent='#sidenav01')
                    span.glyphicon.glyphicon-globe
                    | #{__("sidenavbar.translate")}
                    span.caret.pull-right
                  #toggle2.collapse(style='height: 0px;')
                    ul.nav.nav-list
                      li
                        a(href='#dictionary') #{__("sidenavbar.dictionary")}
                      li
                        a(href='#kawari') Kawari
                      li
                        a(href='#momentjs-and-numeraljs') #{__("sidenavbar.momnum")}
                      li
                        a(href='#cookies') #{__("sidenavbar.cookies")}
                      li
                        a(href='#markdown') #{__("sidenavbar.markdown")}
                      li
                        a(href="#mustache") #{__("sidenavbar.mustache")}
            // /.nav-collapse
      .col-sm-9.col-md-10
        .container#reference
          .btn-group.pull-right
                a.btn.btn-primary.btn-sm(href="##") v0.3
                a.btn.btn-primary.btn-sm.dropdown-toggle(href="#", data-toggle="dropdown")
                  span.caret
                ul.dropdown-menu
                  li
                    a(href="/docs/v0.2") v0.2
          .page-header
            h3
              span.glyphicon.glyphicon-book
              | Gengo.js #{__("container.header.docs")} v0.3
            include docs/reference
            hr.featurette-divider
            include docs/dictionary
block scripts
  script(src="/javascripts/docs.js")

    h2 Notation
    .table-responsive
      table.table.table-hover
        thead
          tr
            th Notation
            th Example
            th Javascript
            th JSON
        tbody
          tr
            td Phrase
            td
              pre.language-javascript
                code.
                  //phrase
                  __("Hello");
            td
              pre.language-javascript
                code.
                  //phrase
                  module.exports = {
                    "Hello": "こんにちは"
                  };
            td
              pre.language-javascript
                code.
                  //phrase
                  {
                    "Hello": "こんにちは"
                  }
          tr
            td Brackets
            td
              pre.language-javascript
                code.
                  //phrase
                  __("[Hello]");
                  //phrase with subkey
                  __("[Hello].informal");
                  //dotted key
                  __("[greeting.hello]");
                  //dotted key with subkey
                  __("[greeting.hello].informal");
            td
              pre.language-javascript
                code.
                  //phrase
                  module.exports = {
                    "Hello": "こんにちは"
                  };
                  //phrase with subkey
                  module.exports = {
                    "Hello": {
                      "informal": "ちっすー"
                    }
                  };
                  //dotted key
                  module.exports = {
                    "greeting.hello": "こんにちは"
                  };
                  //dotted key with subkey
                  module.exports = {
                    "greeting.hello": {
                      "informal": "ちっすー"
                    }
                  };
            td
              pre.language-javascript
                code.
                  //phrase
                  {
                    "Hello": "こんにちは"
                  }
                  //phrase with subkey
                  {
                    "Hello": {
                      "informal": "ちっすー"
                    }
                  }
                  //dotted key
                  {
                    "greeting.hello": "こんにちは"
                  }
                  //dotted key with subkey
                  {
                    "greeting.hello": {
                      "informal": "ちっすー"
                    }
                  }
          tr
            td Dot
            td
              pre.language-javascript
                code.
                  //dotted parsing
                  __("greeting.hello.informal")
            td
              pre.language-javascript
                code.
                  //dotted parsing
                  module.exports = {
                    "greeting": {
                      "hello": {
                        "informal": "ちっすー"
                      }
                    }
                  };
            td
              pre.language-javascript
                code.
                  //dotted parsing
                  {
                    "greeting": {
                      "hello": {
                        "informal": "ちっすー"
                      }
                    }
                  }
